<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color using your defined card background -->
    <solid android:color="@color/card_bg"/>

    <!-- Rounded corners (half of original radius) -->
    <corners android:radius="16dp"/>

    <!-- More prominent border -->
    <stroke
        android:width="1dp"
        android:color="@color/black"/>

    <!-- Optional padding for shadow/elevation effect -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp"/>
</shape>
