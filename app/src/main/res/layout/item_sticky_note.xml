<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardStickyNote"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true"
    android:rotation="-4"
    android:backgroundTint="@color/noteMint">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imgPin"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_pin" />

        <TextView
            android:id="@+id/txtNoteCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Work"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/noteText"
            android:layout_marginTop="6dp"/>

        <TextView
            android:id="@+id/txtNoteDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17 Nov 2025"
            android:textSize="12sp"
            android:textColor="@color/noteText"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/txtNoteMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sample Note"
            android:gravity="center"
            android:textColor="@color/noteText"
            android:textSize="16sp"
            android:padding="6dp"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/txtNoteCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 Tasks"
            android:textSize="13sp"
            android:textColor="@color/noteText"
            android:layout_marginTop="4dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>

