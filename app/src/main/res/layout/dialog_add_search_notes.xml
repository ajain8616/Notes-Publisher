<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <!-- Close Button -->
    <ImageView
        android:id="@+id/btnCloseDialog"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_clear"
        android:contentDescription="Close"
        app:tint="@color/deep_navy"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- MAIN CARD (VISIBLE) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/dialog_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/card_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:padding="26dp">

            <TextView
                android:id="@+id/txtDialogTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add New Category"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/deep_navy"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginBottom="18dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutCategoryName"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Category Name">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtCategoryTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/deep_navy"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_regular"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save"
                android:layout_marginTop="22dp"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_medium"
                app:cornerRadius="16dp"
                app:backgroundTint="@color/accent_leaf_green"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- SECOND CARD (SEARCH) â€” SAME STYLE BUT GONE BY DEFAULT -->
    <androidx.cardview.widget.CardView
        android:id="@+id/search_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:visibility="gone"
        app:cardCornerRadius="22dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/card_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:padding="26dp">

            <TextView
                android:id="@+id/txtSearchTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search Notes"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/deep_navy"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="18dp"
                android:fontFamily="@font/roboto_bold" />

            <!-- Search Field -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutSearch"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search something...">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/deep_navy"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_regular"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Optional: Add Search Button (Same Style as Save Button) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Search"
                android:layout_marginTop="22dp"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_medium"
                app:cornerRadius="16dp"
                app:backgroundTint="@color/accent_leaf_green" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
