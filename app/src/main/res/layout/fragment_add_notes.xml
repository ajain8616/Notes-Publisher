<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".fragments.AddNotesFragment">

    <LinearLayout
        android:id="@+id/customAppBar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:padding="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:tint="@color/deep_navy"/>

        <TextView
            android:id="@+id/titleName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add Notes"
            android:textSize="20sp"
            android:textColor="@color/deep_navy"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/addBtn"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_add_notes"
            android:tint="@color/deep_navy"/>

        <ImageView
            android:id="@+id/searchBtn"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/ic_search"
            android:tint="@color/deep_navy"/>
    </LinearLayout>


   <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/notesRecycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/customAppBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
       tools:listitem="@layout/notes_add_item"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/add_notes_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_margin="24dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="14dp"
        app:cardBackgroundColor="@color/card_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="28dp">


            <!-- Title -->
            <TextView
                android:id="@+id/add_note_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create New Note"
                android:textSize="22sp"
                android:textColor="@color/deep_navy"
                android:fontFamily="@font/roboto_bold"
                android:layout_gravity="center"
                android:layout_marginBottom="22dp"/>


            <!-- NOTE TYPE SELECTOR -->
            <LinearLayout
                android:id="@+id/note_type_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/bg_note_type"
                android:clipToOutline="true"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/noteTypeIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_others"
                    android:scaleType="centerInside"/>

                <TextView
                    android:id="@+id/noteTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Note Category"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/deep_navy"
                    android:fontFamily="@font/roboto_medium"/>
            </LinearLayout>


            <!-- NOTE TITLE -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/note_title_layout"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Note Title"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtNoteTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:padding="8dp"
                    android:textColor="@color/deep_navy"/>
            </com.google.android.material.textfield.TextInputLayout>


            <!-- NOTE DESCRIPTION -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/note_desc_layout"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Write your note..."
                android:layout_marginBottom="24dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtNoteDesc"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:gravity="top"
                    android:padding="8dp"
                    android:textSize="15sp"
                    android:textColor="@color/deep_navy"
                    android:inputType="textMultiLine"/>
            </com.google.android.material.textfield.TextInputLayout>


            <!-- SAVE BUTTON -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save Note"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/roboto_medium"
                app:backgroundTint="@color/accent_leaf_green"
                app:cornerRadius="16dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
