<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Base.Theme.Notes_app" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Light theme customizations -->
        <item name="colorPrimary">@color/forest_green</item>
        <item name="colorPrimaryVariant">@color/deep_navy</item>
        <item name="colorSecondary">@color/accent_leaf_green</item>
        <item name="colorSecondaryVariant">@color/accent_earth_brown</item>

        <!-- Customize background and text colors -->
        <item name="android:windowBackground">@color/soft_beige</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/slate_gray</item>

        <!-- Surface color for Material3 -->
        <item name="colorSurface">@color/white</item>
        <item name="colorSurfaceVariant">@color/soft_gray</item>

        <!-- Customize the navigation bar and status bar colors -->
        <item name="android:statusBarColor">@color/deep_navy</item>
        <item name="android:navigationBarColor">@color/soft_gray</item>

        <!-- Customize other Material3 specific elements -->
        <item name="colorError">@color/deep_brown</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnError">@color/white</item>

    </style>

    <style name="Theme.Notes_app" parent="Base.Theme.Notes_app" />

</resources>
